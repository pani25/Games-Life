<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail_game">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="248dp"
                android:orientation="vertical"
                android:background="@color/yell">
            </LinearLayout>


            <ImageView
                android:id="@+id/image_game1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="#FDFCFC"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/title_game1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_game1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="40dp"
                android:fontFamily="@font/bungee"
                android:text="@string/judul"
                android:gravity="center"
                android:background="@color/black"
                android:textColor="@android:color/white"
                android:textSize="24sp" />


            <RelativeLayout
                android:layout_below="@+id/title_game1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/darkgrey"
                android:layout_marginBottom="30dp">

                <ImageView
                    android:id="@+id/image_game2"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#FDFCFC"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/image_game3"
                    android:layout_below="@+id/image_game2"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#FDFCFC"
                    android:scaleType="centerCrop" />
                <ImageView
                    android:id="@+id/image_game4"
                    android:layout_below="@+id/image_game3"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:background="#FDFCFC"
                    android:scaleType="centerCrop" />




            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>